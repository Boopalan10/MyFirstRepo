<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="adrs"  class="com.spring.bean.Address">
		<property name="doorNo"  value="D.No. 1-121A" />
		<property name="location"  value="Chennai" />
	</bean>   
   
	<bean id="stdinfoobj" class="com.spring.bean.StudentInfo">
		<property name="stdname"  value="Anwar" />
		
		<property name="adrs">
			<ref bean="adrs" />
		</property>
		
		<property name="qualification">
			<list>
				<value>B.Tech</value>
				<value>M.Tech</value>
			</list>
		</property>
		
		<property name="courses">
			<set>
				<value>Java</value>
				<value>Python</value>
				<value>Oracle</value>
			</set>
		</property>
		
		<property name="course_and_faculty">		
			<map>
				<entry key="Java" value="Venugopal" />
				<entry key="Python" value="Satyam" />
				<entry key="Oracle" value="Naveen" />
			</map>
		</property>
		
		<property name="course_and_cost">
			<props>
				<prop key="Java">15000.00</prop>
				<prop key="Python">25000.00</prop>
				<prop key="Oracle">10000.00</prop>
			</props>
		</property>
		
	</bean>
</beans>